echo MENU
echo 1.Addition
echo 2.Substraction
echo 3.Multiplication
echo 4.Division
echo Select operation needed
read var
case $var in
1) echo enter the values
   read a
   read b
   c=`expr $a + $b`
   echo Result is 
   echo $c ;;
2) echo enter the values
   read a
   read b
   c=`expr $a - $b`
   echo Result is 
   echo $c ;;
3) echo enter the values
   read a
   read b
   c=`expr $a \* $b`
   echo Result is 
   echo $c ;;
4) echo enter the values
   read a
   read b
   c=`expr $a / $b`
   echo Result is 
   echo $c ;;
esac   
